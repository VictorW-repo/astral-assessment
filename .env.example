# Astral Assessment Environment Variables
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Output Configuration
OUTPUT_DIR=outputs

# Firecrawl Configuration (Optional - works without it)
# Get your API key from: https://www.firecrawl.dev/
FIRECRAWL_API_KEY=
FIRECRAWL_API_URL=https://api.firecrawl.dev/v2
FIRECRAWL_MAX_URLS=50
FIRECRAWL_TIMEOUT=30

# Firecrawl Resilience Configuration (Optional)
FIRECRAWL_MAX_RETRIES=3
FIRECRAWL_BASE_DELAY_SECONDS=1.0
FIRECRAWL_MAX_DELAY_SECONDS=60
FIRECRAWL_REQUESTS_PER_MINUTE=30

# Inngest Configuration (Optional for local development)
# Get your key from: https://www.inngest.com/
INNGEST_APP_ID=astral-assessment
INNGEST_EVENT_KEY=
INNGEST_BASE_URL=https://api.inngest.com
INNGEST_IS_PRODUCTION=false
INNGEST_REGISTER_EVENT=user.registration.requested
INNGEST_SIGNING_KEY=

# LinkedIn Configuration (Not implemented yet)
# Future implementation - see README.md for plan
LINKEDIN_API_KEY=

# HTTP Client Configuration
HTTP_TIMEOUT=30
HTTP_MAX_RETRIES=3

# Output Management Configuration (Optional)
OUTPUT_INCLUDE_PERSON_NAME=true
OUTPUT_RETENTION_DAYS=30
OUTPUT_CLEANUP_ON_STARTUP=false
OUTPUT_DETAILED_LOGGING=true

# Business Intelligence URL Filtering
BI_URL_LIMIT=7
BI_VALUABLE_PATHS=about,our-approach,team,leadership,services,solutions,case-studies,customers,blog,investors,culture,portfolio,clients,work,projects
BI_EXCLUDED_PATHS=privacy,terms,cookie,careers,contact,login,signup,register,press-kit,media-kit,legal,disclaimer,accessibility,sitemap

# Optional: Advanced Configuration
# Uncomment and modify if needed

# Performance Tuning
# FIRECRAWL_MAX_CONCURRENT=3
# SCRAPE_DELAY_SECONDS=0.5

# Development Settings
# DEBUG=false
# RELOAD=true

# Monitoring (Future)
# SENTRY_DSN=
# DATADOG_API_KEY=

# Database (Future - currently using JSON files)
# DATABASE_URL=postgresql://user:password@localhost/astral

# Redis Cache (Future)
# REDIS_URL=redis://localhost:6379

# Authentication (Future)
# API_KEY=
# JWT_SECRET=

